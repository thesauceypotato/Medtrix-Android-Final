        {
          "label": "A",
          "text": "<10 g/dl",
          "correct": false
        },
        {
          "label": "B",
          "text": "<11g/dl",
          "correct": false
        },
        {
          "label": "C",
          "text": "<12 g/dl",
          "correct": true
        },
        {
          "label": "D",
          "text": "<13 g/dl",
          "correct": false
