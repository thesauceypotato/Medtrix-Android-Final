        {
          "label": "C",
          "text": "De Quervain\u2019s Thyroiditis",
          "correct": false
        },
        {
          "label": "D",
          "text": "Silent Thyroiditis",
          "correct": false
        }
      ],
      "correct_answer": "A. Riedel\u2019s Thyroiditis",
