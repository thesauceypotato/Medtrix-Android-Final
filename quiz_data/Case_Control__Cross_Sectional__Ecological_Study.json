        {
          "label": "B",
          "text": "Cross-sectional study",
          "correct": true
        },
        {
          "label": "C",
          "text": "Case-control study",
          "correct": false
        },
        {
          "label": "D",
          "text": "Ecological study",
          "correct": false
        }
      ],
      "correct_answer": "B. Cross-sectional study",
