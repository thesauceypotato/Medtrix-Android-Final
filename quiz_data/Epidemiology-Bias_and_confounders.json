        {
          "label": "B",
          "text": "Selection Bias",
          "correct": false
        },
        {
          "label": "C",
          "text": "Ascertainment Bias",
          "correct": false
        },
        {
          "label": "D",
          "text": "Pygmalion Bias",
          "correct": true
        }
      ],
      "correct_answer": "D. Pygmalion Bias",
