  "questions": [
    {
      "text": "Which of the following best describes a bias?",
      "options": [
        {
          "label": "A",
          "text": "Random variation in data collection between exposure and disease",
          "correct": false
        },
        {
          "label": "B",
          "text": "Systematic error in determining an association between exposure and disease",
          "correct": true
        },
        {
          "label": "C",
          "text": "Measure of strength of association between exposure and disease",
          "correct": false
        },
        {
          "label": "D",
          "text": "Direct estimation of frequency of exposure between disease and non-disease groups",
          "correct": false
        }
      ],
      "correct_answer": "B. Systematic error in determining an association between exposure and disease",
      "question_images": [],
      "explanation_images": [],
      "explanation": "<table cellspacing=\"0\" style=\"border-collapse:collapse; width:624px\">\n<tbody>\n<tr>\n<td colspan=\"3\" style=\"border-bottom:1px solid #000000; border-left:1px solid #000000; border-right:1px solid #000000; border-top:1px solid #000000; vertical-align:top\">\n<p style=\"text-align:center\"><strong>Types of Bias</strong></p>\n</td>\n</tr>\n<tr>\n<td style=\"border-bottom:1px solid #000000; border-left:1px solid #000000; border-right:1px solid #000000; border-top:1px solid #000000; vertical-align:top\">\n<p><strong>Subject Bias</strong></p>\n</td>\n<td style=\"border-bottom:1px solid #000000; border-left:1px solid #000000; border-right:1px solid #000000; border-top:1px solid #000000; vertical-align:top\">\n<p><strong>Investigator Bias </strong></p>\n</td>\n<td style=\"border-bottom:1px solid #000000; border-left:1px solid #000000; border-right:1px solid #000000; border-top:1px solid #000000; vertical-align:top\">\n<p><strong>Analysis Bias</strong></p>\n</td>\n</tr>\n<tr>\n<td style=\"border-bottom:1px solid #000000; border-left:1px solid #000000; border-right:1px solid #000000; border-top:1px solid #000000; vertical-align:top\">\n<ol>\n<li>Recall bias</li>\n<li>Hawthorne bias</li>\n<li>Reporting bias</li>\n<li>Non-response bias</li>\n</ol>\n</td>\n<td style=\"border-bottom:1px solid #000000; border-left:1px solid #000000; border-right:1px solid #000000; border-top:1px solid #000000; vertical-align:top\">\n<ol>\n<li>Selection bias\n\t\t\t\t<ol>\n<li>Berksonian</li>\n<li>Neyman</li>\n<li>Reporting</li>\n</ol>\n</li>\n<li>Publication bias</li>\n<li>Misclassification bias</li>\n<li>Interviewer bias</li>\n<li>Pygmalion bias</li>\n<li>Golem bias (blunting of response due to demotivated observer)</li>\n</ol>\n</td>\n<td style=\"border-bottom:1px solid #000000; border-left:1px solid #000000; border-right:1px solid #000000; border-top:1px solid #000000; vertical-align:top\">\n<ol>\n<li>Statistical bias</li>\n</ol>\n</td>\n</tr>\n</tbody>\n\n\n<p style='font-size: 10px; color: #808080; font-style: italic;'></p>",
      "bot": "@dams_new_robot",
      "audio": "https://image.prepladder.com/content/z9azoOgc0Wft7BPxGtmX1745949341.mp3",
      "video": "",
